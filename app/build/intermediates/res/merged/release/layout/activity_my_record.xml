<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiger.mobilelearning.activity.MyRecordActivity">

    <!--角色：训导员 我的记录 -->

    <include
        layout="@layout/titleandback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/myName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:text="姓名"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="5%"
            app:layout_textSizePercent="45%" />

        <Button
            android:id="@+id/myPosition"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/myName"
            android:background="@drawable/but_selector_dengji"
            android:enabled="false"
            android:text="员工级别"
            android:textColor="@color/white"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="4%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="20%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_heightPercent="100%"
            app:layout_marginLeftPercent="6%"
            app:layout_widthPercent="22%">

            <TextView
                android:id="@+id/learnTodayTime"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="0分钟"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="100%" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:src="@drawable/img_yuan"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="10%" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgrey"
                    app:layout_marginTopPercent="48%" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="今日在线"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="100%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="22%">

            <TextView
                android:id="@+id/learningCourseNum"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="0门课程"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="100%" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:src="@drawable/img_yuan"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="10%" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgrey"
                    app:layout_marginTopPercent="48%" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="累计课程"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="100%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="22%">

            <TextView
                android:id="@+id/haveFinished"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="0门课程"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="100%" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:id="@+id/imgHead"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:src="@drawable/img_yuan"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="10%" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgrey"
                    app:layout_marginTopPercent="48%" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="考试通过"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="100%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/img_avatar"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="14%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="14%">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_intent"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="50%"
                app:layout_widthPercent="25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/trainerRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="6%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="94%"
        android:visibility="gone">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_trainer"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="6%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="管理"
            app:layout_heightPercent="56%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginTopPercent="30%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="30%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="16%">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_intent"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="50%"
                app:layout_widthPercent="25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/courseRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="6%"
        app:layout_widthPercent="94%"
        android:visibility="gone">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_mycourses"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="6%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="我的课程"
            app:layout_heightPercent="56%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginTopPercent="30%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="30%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="16%">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_intent"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="50%"
                app:layout_widthPercent="25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/feedbackRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="6%"
        app:layout_widthPercent="94%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_feedback"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="6%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="意见反馈"
            app:layout_heightPercent="56%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginTopPercent="30%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="30%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="16%">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_intent"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="50%"
                app:layout_widthPercent="25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/changePasswordRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="6%"
        app:layout_widthPercent="94%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_changepassword"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="6%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="修改密码"
            app:layout_heightPercent="56%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginTopPercent="30%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="30%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="16%">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_intent"
                app:layout_heightPercent="25%"
                app:layout_marginLeftPercent="50%"
                app:layout_widthPercent="25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/cleanupthecacheRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="6%"
        app:layout_widthPercent="94%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_xiaxian"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="6%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="退出登录"
            app:layout_heightPercent="56%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginTopPercent="30%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="30%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_intent"
                android:text=""
                app:layout_heightPercent="44%"
                app:layout_marginRightPercent="25%"
                app:layout_textSizePercent="25%"
                app:layout_widthPercent="100%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</com.zhy.android.percent.support.PercentLinearLayout>
