<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiger.mobilelearning.activity.StartExamActivity">

    <!--考试的第一个界面 点击开始答题按钮，进入答题界面-->

    <include
        layout="@layout/titleandback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey" />

    <TextView
        android:id="@+id/examName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="餐前准备【SOC工作站】考试题"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:text="题   数:"
            app:layout_heightPercent="48%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="40%" />

        <TextView
            android:id="@+id/examNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="10 道" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:text="时   间:"
            app:layout_heightPercent="48%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="40%" />

        <TextView
            android:id="@+id/examTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="30 分钟" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:text="满   分:"
            app:layout_heightPercent="48%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="40%" />

        <TextView
            android:id="@+id/examFullScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="100 分" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:text="及格分:"
            app:layout_heightPercent="48%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="40%" />

        <TextView
            android:id="@+id/examPassPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="60 分" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <include
        layout="@layout/dividingline"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/startExamBut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="84%"
        app:layout_marginTopPercent="8%"
        android:text="开 始 答 题"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/selector_but_login"/>


</com.zhy.android.percent.support.PercentLinearLayout>
