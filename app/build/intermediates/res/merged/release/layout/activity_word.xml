<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiger.mobilelearning.activity.WordActivity">

    <!-- work pdf 等学习 简介目录的课程详情界面 -->

    <include
        layout="@layout/titleandback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/startLearn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"
        android:src="@drawable/img_startlearn"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/courseWordName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="课程名称"
        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="4%"
        app:layout_paddingTopPercent="2%"
        app:layout_textSizePercent="4%"
        app:layout_widthPercent="80%" />

    <TextView
        android:id="@+id/courseWordObject"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="适用对象"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="3%"
        app:layout_textSizePercent="2.4%"
        app:layout_widthPercent="20%"
        android:visibility="invisible"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/courseWordLabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="课程标签"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="4%"
            app:layout_textSizePercent="48%"
            app:layout_widthPercent="30%" />

        <TextView
            android:id="@+id/courseWordTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:text=""
            app:layout_heightPercent="70%"
            app:layout_marginRightPercent="4%"
            app:layout_textSizePercent="48%"
            app:layout_widthPercent="35%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f7f6f5"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="100%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="课程介绍"
        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="4%"
        app:layout_paddingTopPercent="2%"
        app:layout_textSizePercent="3%"
        app:layout_widthPercent="50%" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dimgray"
        app:layout_heightPercent="0.1%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="92%" />

    <TextView
        android:id="@+id/descriptionWord"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="占位占位占位占位占位占位占位占位占位占位占位占位占位占位"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="2%"
        app:layout_textSizePercent="2%"
        app:layout_widthPercent="90%" />

    <Button
        android:id="@+id/butWordStartExam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="90%"
        app:layout_marginLeftPercent="5%"
        android:text="考  试"
        android:textColor="@color/white"
        android:background="@drawable/selector_but_login"
        />
</com.zhy.android.percent.support.PercentLinearLayout>
