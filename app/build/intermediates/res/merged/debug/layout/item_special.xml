<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <!--专题课堂里一级列表界面的item -->

    <TextView
        android:id="@+id/specialClassOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一级菜单"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/specialClassOneImg"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/img_intent"/>


    <TextView
        android:id="@+id/specialClassOneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/13"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/specialClassOneImg"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/butgray"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>