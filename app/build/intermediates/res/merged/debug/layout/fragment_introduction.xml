<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--课程详情里的简介 -->

    <TextView
        android:id="@+id/courseName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="课程名称"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="4%"
        app:layout_paddingTopPercent="2%"
        app:layout_textSizePercent="4%"
        app:layout_widthPercent="50%" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/courseLabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="课程标签"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="4%"
            app:layout_marginTopPercent="50%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="30%" />

        <TextView
            android:id="@+id/courseTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:text="2017/12/01 19:00"
            app:layout_heightPercent="60%"
            app:layout_marginRightPercent="4%"
            app:layout_marginTopPercent="50%"
            app:layout_textSizePercent="40%"
            app:layout_widthPercent="25%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f7f6f5"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="100%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="适用对象"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="4%"
        app:layout_paddingTopPercent="2%"
        app:layout_textSizePercent="4%"
        app:layout_widthPercent="50%" />

    <TextView
        android:id="@+id/courseObject"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="占位占位占位占位占位占位"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="4%"
        app:layout_paddingTopPercent="4%"
        app:layout_textSizePercent="3%"
        app:layout_widthPercent="100%"  />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dimgray"
        app:layout_heightPercent="0.1%"
        app:layout_widthPercent="92%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="4%"
        app:layout_marginBottomPercent="3%"
        app:layout_marginRightPercent="4%"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="课程描述"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="4%"
        app:layout_paddingTopPercent="2%"
        app:layout_textSizePercent="4%"
        app:layout_widthPercent="50%" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="4%"
        app:layout_marginRightPercent="5%"
        app:layout_textSizePercent="3%"
        android:text="占位占位占位占位占位占位占位占位占位占位占位占位占位占位"/>
</com.zhy.android.percent.support.PercentLinearLayout>