<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--培训计划页面里ListView的item -->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_startno" />

        <TextView
            android:id="@+id/trainingNameNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划名称"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="12%"
            app:layout_textSizePercent="10%" />

        <TextView
            android:id="@+id/trainingRangeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainingNameNo"
            android:text="适用范围"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="6%"
            app:layout_textSizePercent="8%" />

        <TextView
            android:id="@+id/trainingTimeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainingRangeNo"
            android:text="创建时间：2017/12/14"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="6%"
            app:layout_textSizePercent="6%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>