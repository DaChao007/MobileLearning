<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiger.mobilelearning.activity.mobilelearningactivity.AdvancedSchoolActivity">

    <!--新手七天 进阶学堂页面 一样架子的页面-->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <include
            layout="@layout/titleandback"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%" />


    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.example.tiger.mobilelearning.view.NoScrollViewPager
        android:id="@+id/advancedSchoolViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.tiger.mobilelearning.view.NoScrollViewPager>
</com.zhy.android.percent.support.PercentLinearLayout>
