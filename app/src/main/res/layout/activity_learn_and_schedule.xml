<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiger.mobilelearning.activity.mobilelearningactivity.LearnAndScheduleActivity">

    <!-- 学习 和 排班 选择界面-->

    <!-- 人员绑定界面-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/learnAndInclude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <include
            layout="@layout/titleandback"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:id="@+id/scheduleSet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="15%"
            android:padding="12dp"
            android:src="@drawable/img_shezhi"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="92%"
        android:src="@drawable/img_learnscheduling"
        android:scaleType="fitXY"
        android:layout_below="@id/learnAndInclude"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/scheduleRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="8%"
        app:layout_marginBottomPercent="12%"
        app:layout_widthPercent="50%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/but_kuang_jing"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:id="@+id/yuan_jing"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/but_yuan_jing"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="10%"
            app:layout_widthPercent="15%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/yuan_jing"
            android:text="考勤管理"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="5%"
            app:layout_textSizePercent="50%"
            app:layout_widthPercent="60%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/learnRelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="50%"
        android:layout_above="@+id/scheduleRelative"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/but_kuang_jing"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:id="@+id/yuan_jingo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/but_yuan_jing"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="10%"
            app:layout_widthPercent="15%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/yuan_jingo"
            android:text="移动学习"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="5%"
            app:layout_textSizePercent="50%"
            app:layout_widthPercent="60%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
