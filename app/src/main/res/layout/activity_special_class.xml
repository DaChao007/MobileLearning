<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiger.mobilelearning.activity.mobilelearningactivity.SpecialClassActivity">

    <!--专题课程页面 -->

    <include
        layout="@layout/titleandback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/specialClassRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="92%"
        app:layout_widthPercent="100%"></android.support.v7.widget.RecyclerView>
</com.zhy.android.percent.support.PercentLinearLayout>
