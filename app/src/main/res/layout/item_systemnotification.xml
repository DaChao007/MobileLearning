<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- 系统通知里的item系统通知-->

    <ImageView
        android:id="@+id/systemImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_noti_system" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/systemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="系统通知"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/systemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:text="2017/12/04 16:13"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/systemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/systemName"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="【欢迎加入西贝移动学习】"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>