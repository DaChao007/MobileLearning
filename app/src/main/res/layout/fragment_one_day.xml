<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiger.mobilelearning.fragment.mobilelearningfragment.OneDayFragment">

    <!--新手第一天 -->

    <ImageView
        android:id="@+id/noExamsImgIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/imt_notdata"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/textClassTableImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_classschedule"
        app:layout_heightPercent="28%"
        app:layout_widthPercent="100%" />

    <Button
        android:id="@+id/bigExam"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selector_but_login"
        android:text="总 考 试"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/oneListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bigExam"
        android:layout_below="@id/textClassTableImg"
        android:divider="@null"></ListView>


</com.zhy.android.percent.support.PercentRelativeLayout>
